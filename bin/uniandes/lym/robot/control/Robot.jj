void controlStructure(): {
} {
		iff() | doo() | rep()
}

void iff(): {
} {
		< IF > < LEFT_PARENTEHSIS > condition() < RIGHT_PARENTEHSIS > < THEN > B() < ELSE > B() < FI >
}

